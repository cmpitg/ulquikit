require_relative 'bootstrap/config'
require_relative 'bootstrap/markdown_renderer'
require 'pygments'

Dir.ensure_dirs *SOURCE_DIRS

task :clean do
  FileUtils.remove_paths *Dir.glob('*.html')
  FileUtils.remove_paths File.expand_path("../build")
end

task :nuke => [:clean] do
  FileUtils.remove_paths *Dir.glob("styles/pygments.css")
  FileUtils.remove_paths File.expand_path("templates/main.html")
end

task :default => [:gen_pygments_css, :gen_default_template] do
  BUILD_DIRS.each { |dir|
    Dir.ensure_dirs File.expand_path("../build/#{dir}")
  }
  Renderer::render_file "main"
end

task :gen_pygments_css do
  puts "Generating Pygments styles: styles/pygments.css"

  File.open('styles/pygments.css', 'w') { |file|
    # file.write Pygments.css(:style => "monokai")
    file.write Pygments.css
  }
end

task :gen_default_template do
  puts "Generating main template: templates/main.html"

  File.open('templates/main.html', 'w') { |file|
    file.write DEFAULT_TEMPLATE
  }
end
