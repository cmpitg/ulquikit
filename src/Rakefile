# Write docs:
# * Create a dir
# * Remove dirs recursively
# * Check if a file/dir exists
#

require_relative 'bootstrap/markdown_renderer'
require 'pygments'

Dir.ensure_dirs 'scripts/', 'styles/', 'images/'

task :clean do
  sh 'rm -rf *.html'
end

task :nuke => [:clean] do
  sh 'rm -rf scripts/* styles/* images/*'
end

task :try do
  Renderer::render_file("main")
end

task :gen_pygment_styles do
  File.open('styles/pygments.css', 'w') { |file|
    file.write Pygments.css
  }
end
